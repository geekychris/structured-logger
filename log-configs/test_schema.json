{
  "name": "TestSchema",
  "version": "1.0.0",
  "description": "Test log for schema evolution",
  "kafka": {
    "topic": "test-schema",
    "partitions": 1,
    "replication_factor": 1,
    "retention_ms": 86400000
  },
  "warehouse": {
    "table_name": "analytics_logs.test_schema",
    "partition_by": ["event_date"],
    "sort_by": ["timestamp"],
    "retention_days": 7
  },
  "fields": [
    {
      "name": "timestamp",
      "type": "timestamp",
      "required": true,
      "description": "Event timestamp"
    },
    {
      "name": "event_date",
      "type": "date",
      "required": true,
      "description": "Date for partitioning"
    },
    {
      "name": "message",
      "type": "string",
      "required": true,
      "description": "Log message"
    }
  ]
}
